def count_words(text):
    # Remove any leading/trailing whitespaces and split the text into words
    words = text.strip().split()
    
    # Return the number of words
    return len(words)

# Example usage:
text = "This is a sample text with some words"
word_count = count_words(text)
print(f"The text '{text}' contains {word_count} words.")
